<Window x:Class="WPFGrupowy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGrupowy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel>
            <Button Content="Dodaj ksiazke" Click="AddBook"/>
            <Button Content="Dodaj bookmark" Click="AddBookmark"/>
        </StackPanel>

        <ScrollViewer>
            <ListView x:Name="ListaKsiazek">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label x:Name="Title" Content="{Binding Title}"></Label>
                            <Label x:Name="Description" Content="{Binding Description}"></Label>
                            <Label x:Name="Autor" Content="{Binding Author}"></Label>
                            <Button Click="Button_Click" Content="Bookmark"/>
                            <Button Content="Usun ksiazke" Click="RemoveBook"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </StackPanel>
</Window>
